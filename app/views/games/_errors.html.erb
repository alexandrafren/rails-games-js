<% if form_save.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(form_save.errors.count, "error") %>
      prohibited this from being saved:
    </h2>

    <ul>
    <% form_save.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>